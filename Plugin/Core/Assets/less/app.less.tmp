@blue = #00a5f0;
@link_color = darken(@blue, 10%);

/* ==|== Import Mixins =========================== */
@import url('mixins.less.ins');

/* ==|== Import HTML Reset =========================== */
@import url('reset.less.ins');

*, *:before, *:after {
  .box-sizing(border-box);
}

/** ----------------------- CORE ---------------------------- */
body {
  font: 13px/1.3em "Helvetica Neue", Arial, sans-serif;
  background-color: #ddd;
}

img {
  display: inline-block;
  max-width: 100%;
  height: auto;
}

a {
  color: @link_color;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }

  &:focus {
    outline: none;
  }
}

.hidden {
  display: none !important;
}

/** ------------------------ GRID ---------------------------- */
.row {
  width: 100%;
  margin: 0 auto;
  max-width: 1000px;
  .clearfix();

  .row {
    width: auto;
    max-width: none;
  }
}

.span1, .span2, .span3, .span4, .span5, .span6, .span7, .span8, .span9, .span10, .span11, .span12, .span13, .span14, .span15, .span16 {
  float: left;
  position: relative;
  margin-left: 1%;
}

.row [class*="span"]:first-child {
  margin-left: 0;
}

.span1 {
  width: 5.3125%;
}
.span2 {
  width: 11.625%;
}
.span3 {
  width: 17.9375%;
}
.span4 {
  width: 24.25%;
}
.span5 {
  width: 30.5625%;
}
.span6 {
  width: 36.875;
}
.span7 {
  width: 43.1875%;
}
.span8 {
  width: 49.5%;
}
.span9 {
  width: 55.8125%;
}
.span10 {
  width: 62.125%;
}
.span11 {
  width: 68.4375%;
}
.span12 {
  width: 74.75%;
}
.span13 {
  width: 81.0625%;
}
.span14 {
  width: 87.375%;
}
.span15 {
  width: 93.6875%;
}
.span16 {
  width: 100%;
}
.t1 {
  width: 6.25%;
}
.t2 {
  width: 12.5%;
}
.t3 {
  width: 18.75%;
}
.t4 {
  width: 25%;
}
.t5 {
  width: 31.25%;
}
.t6 {
  width: 37.5%;
}
.t7 {
  width: 43.75%;
}
.t8 {
  width: 50%;
}
.t9 {
  width: 56.25%;
}
.t10 {
  width: 62.5%;
}
.t11 {
  width: 68.75%;
}
.t12 {
  width: 75%;
}
.t13 {
  width: 81.25%;
}
.t14 {
  width: 87.5%;
}
.t15 {
  width: 93.75%;
}
.t16 {
  width: 100%;
}

/** ----------------------- FLASH MESSAGES ------------------- */
#flashMessage {
  border: 1px solid #ddd;
  margin-bottom: 1.5em;
  padding: 0.8em;

  &.error, &.alert {
    background-color: #f2dede;
    border: 1px solid darken(#f2dede, 20%);
    color: #8a1f11;

    a {
      color: #8a1f11;
    }
  }

  &.notice {
    background-color: #fff6bf;
    border-color: #ffd324;
    color: #514721;

    a {
      color: #514721;
    }
  }

  &.success {
    background-color: #e6efc2;
    border-color: #c6d880;
    color: #264409;

    a {
      color: #264409;
    }
  }

  &.info {
    background-color: #d5edf8;
    border-color: #92cae4;
    color: #205791;

    a {
      color: #205791;
    }
  }
}

/** ------------------- INFOBOX ------------------------------ */
.infobox {
  padding: 10px 10px 0;
  margin-bottom: 20px;
  background-color: #fff6bf;
  border: 1px solid darken(#fff6bf, 20%);

  p {
    padding: 0 0 10px;
    margin: 0;
  }
}

/** ------------------ IMAGE & SPECIAL LINKS ----------------- */
a:not(.button) {

  &.add, &.remove, &.copy, &.view, &.sort, &.edit {
    .inline-block();
    width: 16px;
    height: 16px;
    text-indent: -9999px;
    background: transparent url('../img/sprite.png') no-repeat scroll;
  }

  &.add    { background-position: 0 -64px; }
  &.remove { background-position: -16px -64px; }
  &.copy   { background-position: -32px -64px; }
  &.view   { background-position: -48px -64px; }
  &.sort   { background-position: -48px -48px; cursor: move; }
  &.edit   { background-position: -48px -80px; }

  &.online  { color: green; }
  &.offline { color: red; }

  &.lightmodal-close {
    width: 14px;
    height: 14px;
    text-indent: -9999px;
    background: transparent url('../img/sprite.png') no-repeat scroll;
    background-position: 0 -160px;
  }
}

/** ----------------------- HEADER --------------------------- */
header {
  width: 100%;
  background-color: #222;
  border-bottom: 4px solid @blue;
  position: fixed;
  top: 0;
  z-index: 999;
  .box-shadow(0 0 4px rgba(0, 0, 0, 0.8));

  a {
    color: #999;

    &:hover {
      color: #fff;
    }
  }

  &.debug {
    position: static;
    top: auto;
    margin-bottom: -40px;
  }
}

.lang-switch {
  float: right;
  border-left: 1px solid #000;
  list-style: none;
  margin: 0;
  padding: 0;

  li {
    float: left;
    border-left:  1px solid #333;
    border-right:  1px solid #000;

    &.active a, &.active a:hover {
      background-color: @blue;
      color: #fff;
      text-shadow: none;
    }
  }

  a {
    display: block;
    font-size: 12px;
    font-weight: bold;
    line-height: 39px;
    padding: 1px 10px 0;
    text-shadow: 0 -1px #000;

    &:hover {
      background-color: #333;
      text-decoration: none;
    }
  }
}

/** --------------------- MAIN MENU -------------------------- */
.main-menu {
  float: left;
  list-style: none;
  margin: 0;
  padding: 0;

  li {
    float: left;

    &.active a, &.active a:hover {
      color: #fff;
      background-color: @blue;
      border-left-color: darken(@blue, 10%);
      .text-shadow(none);
    }

    &:first-child a {
      border-left: none;
    }
  }

  a {
    .inline-block();
    padding: 1px 20px 0;
    font-size: 12px;
    font-weight: bold;
    line-height: 39px;
    border-right: 1px solid #000;
    border-left: 1px solid #333;
    //.box-shadow(inset -1px 0 #000);
    .text-shadow(0 -1px #000);

    &:hover {
      background-color: #333;
      text-decoration: none;
    }
  }
}

/** --------------------- USER MENU -------------------------- */
.user-menu {
  float: right;
  color: #999;
  position: relative;

  & > a {
    .inline-block();
    line-height: 39px;
    padding: 0 32px 0 20px;
    background: transparent url(../img/sprite.png) no-repeat scroll right -174px;
  }

  &.hover > a {
    background-color: #333;
    color: #fff;
  }

  a {
    font-weight: bold;

    &:hover {
      text-decoration: none;
    }
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: none;
    position: absolute;
    width: 120px;
    right: 0;
    top: 39px;
    border: 1px solid #000;
    border-top: none;
    z-index: 1000;
    .border-radius(0 0 5px 5px);
    .box-shadow(0 0 5px rgba(0, 0, 0, 0.4));
  }

  li {
    display: block;
    border-top: 1px solid #444;
    border-bottom: 1px solid #111;
    background-color: #333;

    &:first-child {
      border-top: none;
    }

    &:last-child {
      border-bottom: none;
    }

    a {
      display: block;
      padding: 8px 12px;
    }
  }
}

/** ----------------------- CONTENT -------------------------- */
#main {
  padding-top: 60px;
}

.round-shadow {
  .border-radius(5px);
  .box-shadow(0 0 2px #999);
}

.bottom-round {
  .border-radius(0 0 5px 5px);

  tr:last-child {

    td {
      border-bottom: 0 none;

      &:first-child {
        .border-radius(0 0 0 5px);
      }

      &:last-child {
        .border-radius(0 0 5px 0);
      }

      &.warn {
        .border-radius(0 0 5px 5px);
      }
    }
  }
}

.page-content {
  background-color: #fff;
  padding: 20px;
  .border-radius(0 0 5px 5px);
}

/** ----------------------- SUB MENU ------------------------- */
.sub-menu {
  list-style: none;
  margin: 0;
  padding: 0;

  li {
    .inline-block();
    margin-right: 10px;
    margin-bottom: 15px;

    &:last-child {
      margin-right: 0;
    }

    &.active a {
      color: @blue;
    }
  }

  a {
    display: block;
    padding: 0 10px;
    color: #666;
    font-weight: bold;
    line-height: 32px;
    background-color: #222;
    .border-radius(5px);

    &:hover {
      color: #ddd;
      text-decoration: none;
    }
  }
}

/** ----------------------- TITLE PAD ------------------------ */
.title-pad {
  background-color: #222;
  border-bottom: 1px solid #000;
  padding: 30px 20px;
  position: relative;
  .border-radius(5px 5px 0 0);

  h1 {
    max-width: 600px;
    margin: 0;
    color: #fff;
    font-size: 22px;
    font-weight: normal;
    text-shadow: 0 -1px #111;
    line-height: 27px;
  }

  ul.actions {
    list-style-type: none;
    margin: 0;
    padding: 0;
    position: absolute;
    top: 20px;
    right: 20px;

    li {
      float: left;

      a {
        border: 1px solid #000;
        display: block;
        float: left;
        height: 48px;
        text-indent: -9999px;
        width: 68px;
        .border-radius(5px);
        .box-shadow(inset 0 1px 0 rgba(255, 255, 255, 0.2));

        &.add {
          background: #63873d url('../img/sprite.png') no-repeat scroll 0 0;

          &:hover {
            background-color: #77a546;
          }
        }

        &.reload {
          background: #3c8dde url('../img/sprite.png') no-repeat scroll 0 -114px;

          &:hover {
            background-color: lighten(#3c8dde, 5%);
          }
        }
      }
    }
  }
}

/** ---------------------- .LIST TABLE/DIV ----------------------- */
.list-header {
  background-color: #f4f4f4;
  border-bottom: 1px solid #ddd;
  line-height: 41px;
  font-weight: bold;
  .box-shadow(inset 0 1px 1p #fff);
}

.list-header.row [class*="span"] {
  padding: 0 10px;
}

.list {
  width: 100%;
  background-color: #fff;
  border: 1px solid #ddd;

  thead {
    border-bottom: 1px solid #ddd;
    background-color: #f4f4f4;
    padding: 0 20px;
    .box-shadow(inset 0 1px 1px #fff);
  }

  th {
    padding: 0 10px;
    line-height: 41px;
    border-bottom: 1px solid #ddd;
    text-align: left;

    &.actions {
      text-align: center;
    }
  }

  td {
    padding: 10px;
    line-height: 18px;
    border-bottom: 1px solid #ddd;
//    border-bottom: 1px solid #efefef;
  }

  tr {

    &.even {

      td {
        background-color: #fcfcfc;
      }
    }

    &.hover, &.hover.even {

      td {
        background-color: #f5f5f5;

        &.warn {
          background-color: #fff6bf;
        }
      }
    }
  }

  .center { text-align: center; }
  .right  { text-align: right;  }
  .valign-middle { vertical-align: middle; }
  .warn { background-color: #fff6bf; }

  &.ui-sortable {
    border-bottom: none;
  }
}

.list {

  tr.new {
    display: none;
  }

  tr:last-child td {
    //border-bottom: none;
  }

  input[type="text"], input[type="password"] {
    padding: 0.2em 0.3em;
    background-color: #fff;
    .border-radius(0px);
  }

  select {
    width: 100%;
    margin-top: 0;
  }

  .field & {
    label {
      display: block;
      float: none;
      padding: 0;
      width: auto;
      text-align: left;
      margin-top: 7px;
      font-size: 10px;
    }
  }
}

.bottom-links {
  padding: 10px 10px 0;
}

#menu-items tbody tr td:first-child {
  vertical-align: top;
}

#menu-items {
  div[data-type="ExternalLink"], div[data-type="Object"], div[data-type="Action"], div[data-type="CustomAction"] {
    display: none;

    &.active {
      display: block;
    }
  }
}

table.permissions {
  .plugin td {
    background-color: #222;
    color: #fff;
    font-size: 18px;
    line-height: 30px;
    text-shadow: 0 -1px #111;
  }
  .controller {
    background-color: #fcfcfc !important;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    font-weight: bold;
  }
  .action {
    line-height: 32px;
  }
  .last-action {
    td {
      border-bottom: 1px solid #ddd;
    }
  }
  label {
    cursor: pointer;
  }
  & + .form-actions-bar {
    margin-top: -1px;
  }

  input[type=checkbox] {
    margin: 0;
    position: relative;
    top: 1px;
  }
}

/** ------------------------- FORMS -------------------------- */
.ntm {
  margin-top: 0 !important;
}

input[type=text],
input[type=password],
textarea {
  background-color: #fafafa;
  width: 100%;
  border: 1px solid #ccc;
  padding: 7px 8px;
  .border-radius(3px);
  .box-shadow(0 1px 1px rgba(0, 0, 0, 0.075) inset);

  &:focus {
    outline: none;
    background-color: #fff;
    border-color: #5eccff;
    .box-shadow(e("0 1px 2px rgba(0, 0, 0, 0.15) inset, 0 0 5px rgba(0, 165, 240, 0.5)"));

    &:invalid {
      border-color: red;
      .box-shadow(e("0 1px 2px rgba(0, 0, 0, 0.15) inset, 0 0 5px rgba(255, 0, 0, 0.5)"));
    }
  }
}

input[disabled=disabled],
textarea[disabled=disabled] {
  background-color: #f0f0f0;
  color: #6d6d6d;
}

textarea {
  overflow: auto;
  resize: vertical;
}

select {
  margin-top: 6px;
}

optgroup[label] {
  font-weight: bold;
  font-style: normal;
  color: #404040;
}

option {
  color: #000;
}

input[type=checkbox] {
  margin: 8px 5px 0 0;
}

input[type=submit], button {
  font-family: "Helvetica Neue",Arial,sans-serif;
}

.input.required label:before {
  content: "* ";
  color: #cc0000;
  position: relative;
  top: 0px;
  font-size: 13px;
}

input.big {
  font-size: 1.846em;
}

.form-error {
  background-color: #ffddde !important;
}

select.form-error {
  display: block;
}

.error-message {
  display: block;
  margin-top: 5px;
  color: #8a1f11;
}

.form-content {
  padding: 0;
  .border-radius(0);
}

.form-row {
  background-color: #fcfcfc;
  display: table;
//  width: 100%;
//  .clearfix();

  label {
    display: table-cell;
    float: left;
    width: 200px;
    padding: 25px 20px 20px;
    line-height: 21px;
    color: #666666;
    font-weight: bold;
    vertical-align: top;
    text-align: right;

    small {
      display: block;
      color: #999;
      font-size: 11px;
      font-weight: normal;
      line-height: 16px;

      strong {
        font-weight: bold;
      }
    }
  }

  .field {
    display: table-cell;
    width: 100%;
    vertical-align: top;
    padding: 20px;
    border-left: 1px solid #ddd;
    background-color: #fff;

    .input label {
      .inline-block();
      padding: 0;
      float: none;
      font-size: 10px;
      width: auto;
      text-align: left;
    }

    & > small {
      color: #666;
    }

    select + small {
      display: block;
      padding-top: 2px;
    }
  }

  &.required > label:before {
    content: "*";
    color: #cc0000;
    position: relative;
    top: 0px;
    left: -9px;
    margin-right: -5px;
    font-size: 13px;
  }

  &.checkbox {
    .field {
      .clearfix();

      input {
        float: left;
      }

      label {
        float: none;
        padding: 4px 0 0;
        width: auto;
        cursor: pointer;
        font-weight: normal;

        small {
          margin-top: 3px;
          margin-left: 3px;
        }
      }
    }
  }

  &.error > label {
    color: #8a1f11;
  }
}

.input + small, .list + small {
  color: #666;
}

select + small {
  margin-left: 10px;
  color: #666;
}

.form-actions-bar {
  overflow: hidden;
  padding: 20px;
  background-color: #f4f4f4;
  border-top: 1px solid #ddd;
  .border-radius(0 0 5px 5px);
  .box-shadow(inset 0 1px 0 #fff);

  .spinner {
    padding: 16px 0;
    top: 16px;
    left: 10px;
  }

  &.form-filter {
    padding: 10px 20px;
  }
}

h2.inner-box {
  padding: 0 10px;
  margin-top: 20px;
  line-height: 41px;
  border: 1px solid #ddd;
  background-color: #f4f4f4;
  //TODO: .inset-drop-shadow(0px, 1px, 1px, #fff);
}

div.inner-box{
  border: solid #ddd;
  padding: 10px;
  border-width: 0 1px 1px 1px;

  .bottom-links {
    padding: 8px 10px;
  }
}

/** -------------------- SORTABLE PLACEHOLDER ---------------- */
.sortable-placeholder, .sortable-placeholder td {
  background: #fff6bf;
}

.ui-sortable-helper {
  border: none !important;
}

/** ------------------------- TABS --------------------------- */
.tab-tabs {
  margin: 0;
  padding: 0;
  list-style: none;
  background-color: #f4f4f4;
  border-bottom: 1px solid #ddd;
  height: 43px;
  .border-radius(5px 5px 0 0);
  .box-shadow(inset 0 1px #fff, inset 0 -1px #ddd);

  li {
    float: left;

    a {
      display: block;
      color: @blue;
      text-shadow: 0 1px 0 #fff;
      font-size: 12px;
      font-weight: bold;
      line-height: 20px;
      padding: 12px 20px 11px 20px;
      border-right: 1px solid #fff;
      .box-shadow(inset -1px 0 #ddd);
      cursor: pointer;
      .transition(color .2s linear);

      &:hover {
        color: #0082bd;
        text-decoration: none;
      }
    }

    &.active a {
      background-color: #fff;
      color: #222;
    }

    &.first a {
      .border-radius(5px 0 0 0);
    }
  }

  &.no-top-margin {
    margin-top: 0;
  }
}

.tab-content {
  padding: 20px;
}

/** ------------------------- BUTTONS ------------------------ */
@import url('buttons.less.ins');

/** ---------------------- LABELS AND BADGES ----------------- */
.label, .badge {
  display: inline-block;
  padding: 2px 5px 1px;
  font-size: 84.6%;
  font-weight: bold;
  line-height: 14px; // ensure proper line-height if floated
  color: #fff;
  vertical-align: baseline;
  white-space: nowrap;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, .25);
  background-color: #999;

  &:empty {
    display: none; // Empty labels/badges collapse
  }
}

.label {
  .border-radius(3px);
}

.badge {
  padding-left: 9px;
  padding-right: 9px;
  .border-radius(9px);
}

.label-important {
  background-color: #c09853;
}

.label-info {
  background-color: @blue;
}

.label-warning {
  background-color: #f89406;
}

.label-error {
  background-color: #c90000;
}

/** ------------------------- WYSIWYM ------------------------ */
@import url('wysiwym.less.ins');

/** ------------------ MULTI & SINGLE FILE UPLOAD ------------ */
.multi-fileupload-box {
  margin-bottom: 5px;
  background-color: #f4f4f4;
  border: 1px solid #ccc;
  padding: 10px;
  max-height: 33px;
  .border-radius(3px);
  .clearfix();

  &.hover, &.in {
    background-color: @blue;

    p.uploadHintText {
      color: #fff;
    }
  }

  &.fade {
    .transition(all .3s ease-out .3s);
    .opacity(1);
  }

  .multi-fileupload-button {
    float: left;
    overflow: hidden;
  }

  p.uploadHintText {
    float: left;
    padding-left: 10px;
    line-height: 31px;
    color: #222;
  }
}

.fileinput-button {
  position: relative;
  overflow: hidden;
  float: left;
  margin-right: 4px;

  input {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    border: solid transparent;
    border-width: 0 0 100px 200px;
    opacity: 0;
    filter: alpha(opacity=0);
    -moz-transform: translate(-300px, 0) scale(4);
    direction: ltr;
    cursor: pointer;
  }
}

ul.upload-preview {
  width: 100%;

  li {
    background-color: #f4f4f4;
    border: 1px solid #ccc;
    margin-bottom: 5px;
    padding: 0 0 0 10px;
    .border-radius(3px);
    .clearfix();

    &.abort {
      background-color: #ffddde;
    }

    div.cell {
      float: left;
      padding: 0 5px;
      line-height: 28px;

      &.name {
        width: 190px;
      }

      &.size {
        width: 80px;
        text-align: right;
        padding-right: 15px;
      }

      &.progress {
        width: 240px;
        padding: 4px 5px;

        .ui-progress-bar {
          display: block;
          margin-top: 0;
          height: 20px;
          .border-radius(20px);

          .ui-progress {
            padding-right: 0;
            height: 18px;
            .border-radius(20px);

            span.ui-label {
              font-size: 12px;
              line-height: 20px;
            }
          }
        }
      }

      &.actions {
        float: right;

        a.cancel {
          .inline-block();
          margin-top: 4px;
          margin-bottom: -5px;
          width: 20px;
          height: 20px;
          border: 1px solid #ccc;
          background: #f4f4f4 url(../img/cancel.png) no-repeat scroll 2px 2px;
          .border-radius(3px);

          &:hover {
            background-color: #e3e3e3;
          }
        }
      }
    }
  }
}

ul.image_sort_list {
  list-style: none outside none;
  margin-top: 10px;
  .clearfix();

  li {
    padding: 10px;
    margin-bottom: 10px;
    margin-right: 10px;
    float: left;
    position: relative;
    cursor: move;
    background-color: #f4f4f4;
    border: 1px solid #ccc;
    .border-radius(5px 0 5px 5px);

    a.remove {
      position: absolute;
      top: 0;
      right: 0;
      width: 16px;
      height: 16px;
      background: transparent url('../img/remove.png');
    }
  }

  img {
    float: left;
  }

  div.input {
    float: left;
    margin-left: 10px;
  }
}

/* Fix for IE 6: */
*html .fileinput-button {
  line-height: 22px;
  margin: 1px -3px 0 0;
}

/* Fix for IE 7: */
*+html .fileinput-button {
  margin: 1px 0 0 0;
}

/** --------------------- LightModal ------------------------- */
#lightmodal_overlay {
  background-color: #000;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
}

#lightmodal_content {
  background-color: #fff;
  .border-radius(5px);
  .box-shadow(0 0 5px rgba(0, 0, 0, 0.5));

  h2, p {
    margin: 0;
    padding: 0;
  }
}

#lightmodal_header {
  padding: 18px 18px 14px;
  background-color: #e5e5e5;
  border-bottom: 1px solid #ccc;
  .border-radius(5px 5px 0 0);

  h2 {
    font-size: 18px;
    color: #444;
    .text-shadow(1px 1px 0 rgba(255, 255, 255, 0.5));
  }

  a.lightmodal-close {
    position: absolute;
    top: 18px;
    right: 18px;
  }
}

#lightmodal_body {
  padding: 20px 0 10px;

  p {
    padding: 0 20px 20px;
    line-height: 1.5em;
  }
}

#lightmodal_confirm_bar {
  padding: 10px 20px 0;
  border-top: 1px solid #eee;
  text-align: right;
}

/** ------------------------- FOOTER ------------------------- */
footer {
  color: #666;
  font-size: 11px;
  text-shadow: 0 1px #eee;
  padding: 20px 0;

  a {
    color: #666;
    font-weight: bold;
    border-bottom: 1px dotted #999;

    &:hover {
      color: @blue;
      text-decoration: none;
      border-bottom-color: @blue;
    }
  }
}

/** ----------------------- LOGIN PAGE ----------------------- */
.login {

  .login-wrapper {
    width: 360px;
    margin: 100px auto 0;
    background-color: #fff;
    .border-radius(5px);
    .box-shadow(3px 3px 4px #bbb);
  }

  #flashMessage {
    padding: 0.8em 20px;
    margin: 0;
    border: 0 none;
    border-bottom: 1px solid #ddd;
  }

  h1 {
    padding: 0 20px;
    margin: 0;
    color: #fff;
    font-size: 1.7em;
    font-weight: normal;
    line-height: 2.2em;
    background-color: #222;
    border-bottom: 1px solid #000;
    .border-radius(5px 5px 0 0);
  }

  .form-content {
    padding: 20px;
  }

  .input {
    margin: 0 0 20px;

    &.checkbox {
      margin: 0;
    }

    &.required label:before {
      display: none;
    }

    input:focus:invalid {
      border-color: #5eccff;
      .box-shadow(e("0 1px 2px rgba(0, 0, 0, 0.15) inset, 0 0 5px rgba(0, 165, 240, 0.5)"));
    }
  }

  footer {
    width: 360px;
    margin: 0 auto;
  }
}

